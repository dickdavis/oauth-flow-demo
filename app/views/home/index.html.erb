<div class="flex h-screen">
  <div class="m-auto">
    <div class="flex flex-col text-center gap-4">
      <% if current_user %>
        <%= button_to 'Sign out', sign_out_path, class: 'btn-primary', method: :delete %>
      <% else %>
        <%= link_to 'Sign up', new_user_path, class: 'btn-primary' %>
        <%= link_to 'Sign in', new_session_path, class: 'btn-outline' %>
      <% end %>
    </div>
  </div>
</div>
